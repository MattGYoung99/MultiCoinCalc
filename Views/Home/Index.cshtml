<div class="container">
  <div class="row text-center justify-content-center">
    <div class="col-sm-8 col-lg-4">
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <input onkeyup="calculatePrice()" id="inputCoinName" type="text" class="form-control form-control-lg awesomplete" placeholder="Coin Name">
          </div>
          <div class="form-group">
            <input onkeyup="calculatePrice()" id="inputQuantity" type="number" class="form-control form-control-lg" placeholder="Quantity">
          </div>
          <div class="input-group">
            <div class="input-group-prepend pr-1">
              <select onchange="calculatePrice()" id="inputCurrency" class="form-control form-control-lg">
                <option value="USD">USD $</option>
                <option value="GBP">GBP £</option>
                <option value="EUR">EUR €</option>
                <option value="JPY">JPY ¥</option>
                <option value="CNY">CNY ¥</option>
              </select>
            </div>
            <input id="fiatValue" type="text" class="form-control form-control-lg" placeholder="Value" readonly>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>